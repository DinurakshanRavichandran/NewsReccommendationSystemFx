<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="460.0" prefWidth="780.0" stylesheets="@../css/registerView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oodprojectfx.controllers.RegisterController">
   <children>
      <VBox fx:id="hboxRight" layoutX="-2.0" prefHeight="460.0" prefWidth="511.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="53.0" prefWidth="480.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="54.0" prefWidth="129.0">
                     <children>
                        <Button fx:id="signInButton" mnemonicParsing="false" onAction="#onSignInButtonClick" prefHeight="30.0" prefWidth="100.0" style="-fx-background-radius: 50; -fx-border-radius: 50;" text="Sign In">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="hboxLeft" layoutX="509.0" prefHeight="460.0" prefWidth="315.0">
         <children>
            <HBox prefHeight="84.0" prefWidth="315.0" stylesheets="@../css/loginPage.css" />
            <HBox alignment="CENTER" prefHeight="52.0" prefWidth="302.0">
               <children>
                  <TextField fx:id="UsernameField" prefHeight="38.0" prefWidth="267.0" promptText="Username" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="52.0" prefWidth="302.0">
               <children>
                  <TextField fx:id="EmailField" prefHeight="38.0" prefWidth="267.0" promptText="Email" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="302.0">
               <children>
                  <PasswordField fx:id="PasswordField" prefHeight="38.0" prefWidth="267.0" promptText="Password" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="302.0">
               <children>
                  <PasswordField fx:id="reEnterPasswordField" prefHeight="38.0" prefWidth="267.0" promptText="Re-enter Password" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="302.0">
               <children>
                  <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onSignUpButtonClick" prefHeight="38.0" prefWidth="267.0" style="-fx-background-radius: 50; -fx-border-radius: 50;" text="Register">
                     <font>
                        <Font name="Calibri Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="53.0" prefWidth="315.0">
               <children>
                  <CheckBox fx:id="adminOptionCheckbox" mnemonicParsing="false" onAction="#onadminCheckboxClick" text="Create Admin Account              " />
               </children>
            </HBox>
            <HBox prefHeight="53.0" prefWidth="315.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
